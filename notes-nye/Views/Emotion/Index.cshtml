@{
}


<div class="text-center">
    <h1 class="display-4">Emotions</h1>
    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Desc
            </th>
        </tr>

        @foreach (var item in ViewData["emotions"] as IList<notes_nye.Models.Emotion>)
        {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                <a class="btn btn-success" href="Emotion/View/@item.Id">Edit</a>
                <a class="btn btn-danger" href="Emotion/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
    <p><a href="Emotion/Create">Add new emotion</a></p>
</div>