@{
}

<div>
    @if (@ViewBag.Msg != null)
    {
        <h4 style="color:purple">
            <b>  @ViewBag.Msg </b> <br />
        </h4>
    }
    <h1>Add</h1>
    <p>Add a emotion here:</p>

    <form action="Create" method="post">
        <div class="mb-3">
            <label class="form-label" for="emName">Name</label>
            <input class="form-control" id="emName" name="emName" type="text">
        </div>
        <div class="mb-3">
            <label class="form-label" for="emDesc">Desc</label>
            <input class="form-control" id="emDesc" name="emDesc" type="text">
        </div>
        <button class="btn btn-primary" type="submit">Add</button>
        @Html.AntiForgeryToken()
    </form>

    <p><a href="/">Back home</a></p>
</div>