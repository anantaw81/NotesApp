<h1>Edit Note</h1>
<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Content</label>
        <input type="text" class="form-control" asp-for="Content">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Tag</label>
        <input type="text" class="form-control" asp-for="Tag">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Writer</label>
        <input type="text" class="form-control" asp-for="Writer.Name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Emotion</label>
        <input type="text" class="form-control" asp-for="Emotion.Name">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Note">Delete</button>
</form>
