@model IEnumerable<notes_nye.Models.Note>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Note Page";
}
<div>
    <div class="container-fluid">
    <h1 class="display-6 mb-4 text-center">List of All Notes</h1>
        <div class="row row-cols-2">
            @foreach (var item in ViewData["notes"] as IList<notes_nye.Models.Note>)
            {
            <div class="col">
                <div class="card">
                    <div class="card-header">
                            @item.Title
                    </div>
                    <div class="card-body">
                            <p class="card-text">@item.Content | @item.Emotion.Name</p>
                            <footer class="blockquote-footer">by <cite title="Source Title">@item.Writer.Name</cite> | @item.Tag </footer>
                            <a class="btn btn-success" href="Note/View/@item.Id">Edit</a>
                            <a class="btn btn-danger" href="Note/Delete/@item.Id">Delete</a>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
