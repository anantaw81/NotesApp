@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <div>
        <h4 style="color:purple">
            <b>    @ViewBag.Msg </b> <br />
        </h4>
        <h1>Add a note</h1>
        <p>Add a note here:</p>

        <form action="Create" method="post">
            <div>
                <label for="noteTitle">Title</label>
                <input id="noteTitle" name="noteTitle" type="text">
            </div>
            <div>
                <label for="noteContent">Content</label>
                <input id="noteContent" name="noteContent" type="text">
            </div>
            <div>
                <label for="noteContent">Writer</label>
                <input id="noteWriter" name="noteWriter" type="text">
            </div>
            <div>
                <label for="noteTag">Tag</label>
                <input id="noteTag" name="noteTag" type="text">
            </div>
            <div>
                <label for="noteEmotion">Emotion</label>
                <input id="noteEmotion" name="noteEmotion" type="text">
            </div>
          <button type="submit">Add</button>
          @Html.AntiForgeryToken()
        </form>

        <p><a href="/">Back home</a></p>
        <p><a href="/notes">Back to notes.</a></p>
    </div>
}
